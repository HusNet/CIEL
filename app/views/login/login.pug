extends index

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Sign Up

                // login form
                form(method='POST' action='/register')
                    div.form-group
                        label(for='telephone') Numéro de téléphone:
                        input#telephone.form-control(type='tel', placeholder='+417x xxx xx xx' name='telephone' required)
                    button.btn.btn-primary(type='submit') Sign up